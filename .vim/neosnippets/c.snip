    {
        ${0}
    }

snippet else
abbr else {${0}}
    else
    {
        ${0}
    }

snippet switch
abbr switch (${1:target}) {${0}}
    switch (${1:target})
    {
        ${0}
    }

snippet while
abbr while (${1:condition}) {${0}}
    while (${1:condition})
    {
        ${0}
    }

snippet struct
abbr struct ${1:name} {${0}};
    struct ${1:name}
    {
        ${0}
    };

snippet typedef_struct
