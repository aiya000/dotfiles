    <ComboBox${0:TARGET}/>

snippet TextBox
abbr <TextBox/>
    <TextBox${0:TARGET}/>

snippet TextBlock
abbr <TextBlock/>
    <TextBlock${0:TARGET}/>

snippet Button
abbr <Button/>
    <Button${0:TARGET}/>

snippet Run
