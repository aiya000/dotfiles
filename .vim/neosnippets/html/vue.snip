snippet v_if
alias vif v-if
abbr v-if="${0:cond}"
    v-if="${0:cond}"

snippet v_else_if
alias velseif v-else-if
abbr v-else-if="${0:cond}"
    v-else-if="${0:cond}"

snippet v_else
alias velse v-else
abbr v-else
    v-else

snippet v_for
alias vfor v-for
abbr v-for="${1:x} in ${0:xs}"
    v-for="${1:x} in ${0:xs}"

snippet v_model
alias vmodel v-model
abbr v-model="${0:data_property}"
    v-model="${0:data_property}"
