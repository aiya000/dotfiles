alias   if
abbr    if [] ; then ~ fi
options head
    if [ ${1:#:condtion} ] ; then
        ${0}
    fi

alias   for
abbr    for i in var ; do ~ done
options head
    for ${1:i} in ${2:#:var} ; do
        ${0}
    done

alias   bfor
abbr    for (()) ; do ~ done
options head
    for (( ${1:#:init}; ${2:#:condtion}; ${3:#:effect} )) ; do
        ${0}
    done
