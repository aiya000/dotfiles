alias   if
abbr    if [ __ ] ; then __ fi
options head
    if [ ${1:#:condtion} ] ; then
        ${0}
    fi

alias   for
abbr    for __ in __ ; do __ done
options head
    for ${1:i} in ${2:#:var} ; do
        ${0}
    done

alias   for_bash
abbr    for (( __; __; __ )) ; do __ done
options head
    for (( ${1:#:init}; ${2:#:condtion}; ${3:#:effect} )) ; do
        ${0}
    done
