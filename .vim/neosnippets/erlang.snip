snippet module
abbr    -module(__).
    -module(${1:`expand('%:t:r')`}).${0}

snippet export
abbr    -export(__).
    -export([${1:#:funcName}]).${0}

snippet compile
abbr    -compile(__).
    -compile(export_all).

snippet iowrite
abbr    io:write(__)
    io:write(${1:#:foo})

snippet ionl
abbr    io:nl(__)
    io:nl()
