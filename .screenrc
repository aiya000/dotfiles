# Change prefix key
escape ^T^T

# Change key bind
bind o focus

# Resize Mode [ Pre+a r ]
bind r eval 'command -c resize'
bind -c resize k eval "resize +1" "command -c resize"
bind -c resize j eval "resize -1" "command -c resize"

# Auto detach if suddenly break screen
autodetach

# log config
logfile ~/.screen_history/screen-%n-%H-%y%m%d.log
deflog on
log on

# scroll back config
defscrollback 10000

