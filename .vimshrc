# Vim Config
alias vis='vim --split=sp'
alias viv='vim --split=vsp'
alias vim='vim --split=tabedit'
alias vimconfig='vim --split=tabedit ~/.vimrc'
alias gvimconfig='vim --split=tabedit ~/.gvimrc'
alias vimshconfig='vim --split=tabedit ~/.vimshrc'
alias vim-bashrc='vim --split=tabedit ~/.bashrc'
alias vim-bashpr='vim --split=tabedit ~/.bash_profile'
alias vimshell=':VimShellCreate'
alias new=':VimShellCreate'
alias vsp=':VimShellCreate -split-command=vsp'
alias sp=':VimShellCreate -split-command=sp'
alias tabnew=':VimShellCreate -split-command=tabnew'
alias reload='vimsh ~/.vimshrc'

## shell
alias mv='mv -i'
alias cp='cp -i'
alias la='ls -a --color=auto --group-directories-first'
alias ll='ls -l --color=auto --group-directories-first'
alias llh='ls -lh --color=auto --group-directories-first'
alias lla='ls -la --color=auto --group-directories-first'

## git
alias g='git'
alias ga='git add'
alias gaa='git add -A'
alias gb='git branch'
alias gc='git commit'
alias gcam='git commit --amend'
alias gcm='git commit -m'
alias gco='git checkout'
alias gd='git diff'
alias gl='git log'
alias gs='git status'
alias gss='git stash'

# For my plugins
alias reload-places='reload_places'
alias edit-places='edit_places'

# Others
alias thanks='echo "(*^o^)< You are welcome!"'
alias ctags-r='ctags --tag-relative --recurse --sort=yes'
alias mysql='mysql --protocol=TCP'
alias git-set-casual-name='git config --local user.name aiya000 && git config --local user.email aiya000.develop@gmail.com ; git config --local user.name ; git config --local user.email'
