# Vim Config
alias vis='vim --split=sp'
alias viv='vim --split=vsp'
alias vim='vim --split=tabedit'
alias vimconfig='vim --split=tabedit ~/.vimrc'
alias gvimconfig='vim --split=tabedit ~/.gvimrc'
alias vimshconfig='vim --split=tabedit ~/.vimshrc'
alias vim-bashrc='vim --split=tabedit ~/.bashrc'
alias vim-bashpr='vim --split=tabedit ~/.bash_profile'
alias vimshell=':VimShellCreate'
alias new=':VimShellCreate'
alias vsp=':VimShellCreate -split-command=vsp'
alias sp=':VimShellCreate -split-command=sp'
alias tabnew=':VimShellCreate -split-command=tabnew'
alias lcd='cd .'

# NeoVim? Config
alias nvim="vim"

# Shell Config
alias reload='vimsh ~/.vimshrc'
alias mv='mv -i'
alias cp='cp -i'
alias ctags-r='ctags --tag-relative --recurse --sort=yes'

# Develop Config
alias g++='g++ -I/usr/include/c++/4.9 -I/usr/include/c++/4.9/x86_64-linux-gnu -std=c++1y'
alias tsc="tsc --target es5"

# for My Command
alias reload-places='reload_places'
alias edit-places='edit_places'

# Windows
#@Deprecated('exec on no windows')
alias open-cygwin='start bash.exe --login -c "cd \"`pwd`\" ; exec /bin/bash -rcfile ~/.bashrc"'

# Other Alias
alias thanks='echo "(*^o^)< You are welcome!"'
