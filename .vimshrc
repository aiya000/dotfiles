
# Vim Config
alias vis='vim --split=vsp $$args'
alias viv='vim --split=sp $$args'
alias vim='vim --split=tabedit $$args'
alias vimconfig='vim --split=tabedit ~/.vimrc'
alias vimshconfig='vim --split=tabedit ~/.vimshrc'
alias vimpro='vim --split=tabedit ~/.bash_profile'
alias vimbash='vim --split=tabedit ~/.bashrc'

# Shell Config
alias reload='vimsh ~/.vimshrc'

# Develop Config
alias g++='g++ -I/usr/include/c++/4.9 -I/usr/include/c++/4.9/x86_64-linux-gnu -std=c++11'

# Other Alias
alias gyazo='ruby ~/.vim/bundle/vim-gyazo/gyazo/gyazo.rb'

let $PATH = $PATH . ":~/.vim/bin/vimshell"
